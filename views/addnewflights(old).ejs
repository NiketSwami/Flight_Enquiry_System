<style>
    .maincontainer{
        display: flex;
        justify-content: center;
        align-items: center; 
        background: #60a3bc;
     
        height: auto;
    }
    .root{
        width: 700px;
        height: auto;
         background: #c7ecee;
        border-radius: 20px;
        padding: 10px;
        
    }

    .heading{
        color:#fff;
        font-size: 50px;
        font-weight: bold;
        font-family: Dosis;
        display: flex;
        justify-content: center;
        height: 15%;
        align-items: center;
        background:#0a3d62;
        padding: 5px;
        border-radius: 10px;
        
    }
    .gap{
        margin-top: 10px;
    }

</style>



<html>
    <head>
        <title>
            Flight India
        </title>
        <!-- Font Awesome -->
    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
    rel="stylesheet"
    />

       <!-- Google Fonts -->
    <link
    href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
    rel="stylesheet"
    />
      <!--Google Dosis font-->
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@500&display=swap" rel="stylesheet">

       <!-- MDB -->
    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css"
    rel="stylesheet"
    />


      <!-- MDB -->
    <script
       type="text/javascript"
       src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js">
    </script>
    
    </head>


    <body>

        <div class="maincontainer">
            <div class="root">
                <div class="heading">
                    FLIGHT ENQUIRY SYSTEM
                </div>

                <div class="form-outline gap">
                    <input type="text" name="flightid" class="form-control form-control-lg" />
                    <label class="form-label" for="formControlLg">Flight ID</label>
                </div>

                <div class="form-outline gap">
                    <input type="text" name="companyname" class="form-control form-control-lg" />
                    <label class="form-label" for="formControlLg">Company Name</label>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-outline gap">
                            <input type="text" name="sourcestate" class="form-control form-control-lg" />
                            <label class="form-label" for="formControlLg">Source State</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-outline gap">
                            <input type="text" name="sourcecity" class="form-control form-control-lg" />
                            <label class="form-label" for="formControlLg">Souce City</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-outline gap">
                            <input type="text" name="destinationstate" class="form-control form-control-lg" />
                            <label class="form-label" for="formControlLg">Destination State</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-outline gap">
                            <input type="text" name="sourcecity" class="form-control form-control-lg" />
                            <label class="form-label" for="formControlLg">Destination City</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-outline  gap">
                            <select type="text" name="status" class="mdb-select md-form form-control form-control-lg">
                                <option>-Select Status</option>
                                <option>Non Stop</option>
                                <option>With Stop</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6 ">
                        <div class="form-check form-check-inline gap">
                            <input class="form-check-input" type="checkbox" name="fclass" value="option1" checked/>
                            <label class="form-check-label" for="inlineCheckbox1">Economy</label>
                        </div>
                          
                        <div class="form-check form-check-inline gap">
                            <input class="form-check-input" type="checkbox" name="fclass" value="option2" />
                            <label class="form-check-label" for="inlineCheckbox2">Business</label>
                        </div>
                          
                    </div>
                </div>
              
              
            </div>
        </div>
        
     </body>


    <!-- MDB -->
    <script
    type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"
    ></script>



</html>