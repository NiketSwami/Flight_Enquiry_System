 <!DOCTYPE html>
 <html>
   <head>
    <link rel="shortcut icon" type="image/png" href="images/airasia.png">
     <!--Import Google Icon Font-->
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
       <!--Google Dosis font-->
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@500&display=swap" rel="stylesheet">
    


      <!-- Compiled and minified CSS -->
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

 <!-- Compiled and minified JavaScript -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    
   </head>

   <body>
     <form action="/flight/addnewrecord" method="post" enctype="multipart/form-data">

    <div class="maincontainer">
      
        <div class="root">
            <div class="heading">
              <div style="display: flex;align-items: center;justify-content: center;">
              <img src="/images/flightlogo.png" width="150px" >
            </div>
              
            FLIGHT ENQUIRY SYSTEM

            </div>

            <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix">airplanemode_active</i>
                  <input id="icon_id" name="flightid" type="text" class="validate">
                  <label for="icon_prefix">Flight ID</label>
                </div>
            
                <div class="input-field col s6">
                  <i class="material-icons prefix">business</i>
                  <input id="icon_name" name="companyname" type="text" class="validate">
                  <label for="icon_prefix">Company Name</label>
                </div>
            </div>
            <div class="row">
                <div class="col s3">
                  <div class="input-field">
                  <i class="material-icons prefix">flight_takeoff</i>
                    <select name="sourcestate" id="sourcestate">
                      <option value="" disabled selected>Choose your option</option> 
                    </select>
                    <label>Select source State</label>
                  </div>
                </div>
                <div class="input-field col s3">
                  <i class="material-icons prefix">flight_takeoff</i>
                  <select name="sourcecity" id="sourcecity">
                    <option value="" disabled selected  class="bold-option">Choose your option</option> 
                  </select>
                  <label>Select source City</label>
                </div>
            
                <div class="input-field col s3">
                  <i class="material-icons prefix">flight_land</i>
                  <select name="destinationstate" id="destinationstate">
                    <option value="" disabled selected>Choose your option</option> 
                  </select>
                  <label for="icon_prefix">Destination State</label>
                </div>
                <div class="input-field col s3">
                    <i class="material-icons prefix">flight_land</i>
                    <select name="destinationcity" id="destinationcity">
                      <option value="" disabled selected>Choose your option</option> 
                    </select>
                    <label for="icon_prefix">Destination City</label>
                </div>
            </div>
            <div class="row">
                <div class="col s3">
                      <div class="input-field">
                        <select name="status">
                          <option value="" disabled selected>Choose your option</option>
                          <option>With Stop</option>
                          <option>Non Stop</option>
                        </select>
                        <label>Select status</label>
                      </div>
                </div>
                <div class="col s3" style="display: flex;flex-direction: row; justify-content:space-around;align-items: center;">
                  <p>
                    <label>
                      <input type="checkbox" name="fclass" value="Economy" />
                      <span><b>Economy</b></span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input type="checkbox" name="fclass" value="Business" />
                      <span><b>Business</b></span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input type="checkbox" name="fclass" value="FirstClass" />
                      <span><b>FirstClass</b></span>
                    </label>
                  </p>

                </div>
            
              <div class="col s3">
                <div class="input-field">
                  <i class="material-icons prefix">access_time</i>
                  <input id="icon_sourcetime" name="sourcetime" type="text" class="timepicker">
                  <label for="icon_sourcetime">Source Timing</label>
                </div>
              </div>
              <div class="col s3">
                <div class="input-field ">
                  <i class="material-icons prefix">access_time</i>
                  <input id="icon_destime" name="destime" type="text" class="timepicker">
                  <label for="icon_destime">Destination Timing</label>
                </div>
              </div>
            </div>
            
            <div class="row">
            <div class="col s12" style="display: flex;flex-direction: row; justify-content:space-around;align-items: center;">
              <p>
                <label>
                  <input type="checkbox" name="days" value="Sunday" />
                  <span><b>Sunday</b></span>
                </label>
              </p>
              <p>
                <label>
                  <input type="checkbox" name="days" value="Monday" />
                  <span><b>Monday</b></span>
                </label>
              </p>
              <p>
                <label>
                  <input type="checkbox" name="days" value="Tuesday" />
                  <span><b>Tuesday</b></span>
                </label>
              </p>
              <p>
                <label>
                  <input type="checkbox" name="days" value="Wednesday" />
                  <span><b>Wednesday</b></span>
                </label>
              </p>
              <p>
                <label>
                  <input type="checkbox" name="days" value="Thrusday" />
                  <span><b>Thrusday</b></span>
                </label>
              </p>
              <p>
                <label>
                  <input type="checkbox" name="days" value="Friday" />
                  <span><b>Friday</b></span>
                </label>
              </p>
              <p>
                <label>
                  <input type="checkbox" name="days" value="Saturday" />
                  <span><b>Saturday</b></span>
                </label>
              </p>

            </div>
            </div>


            <div class="row">
              <div class="col s12">
                <div class="file-field input-field">
                  <div class="btn">
                    <span><b>File</b></span>
                    <input type="file" name="logo">
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                  </div>
                </div>
              </div>
            </div>
  
            <div class="row">
              <div class="col s4" style="display:flex;justify-content:center">
                <button class="btn waves-effect waves-light" type="submit" name="action"><b>Submit</b>
                  <i class="material-icons right">send</i>
                </button>
              </div>
            
              <div class="col s4" style="display:flex;justify-content:center;font-size: 24;font-weight: bold;">
                   <%= msg %>
              </div>

            
            
              <div class="col s4" style="display:flex;justify-content:center">
                <button class="btn waves-effect waves-light" type="reset" name="action"><b>Reset</b>
                  <i class="material-icons right">remove</i>
                </button>
              </div>
            </div>
           
            


        </div>
    </div>
  </form>
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
   </body>
 </html>