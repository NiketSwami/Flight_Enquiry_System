<style>
    .maincontainer{
        display:flex;
        justify-content: center;
        align-items: center;
        background-color: #7f8fa6;       
        height: 100vh;
    }
    .root{
        
        width: 700px;
        background-color: azure;
        height: auto;
        padding: 10px;
        border-radius: 10px;
    }
    
    .heading{
        color:#fff;
        font-size: 50px;
        font-weight: bold;
        font-family: Dosis;
        display: flex;
        justify-content: center;
        height: 12%;
        align-items: center;
        background:#a6b2c2;
        padding: 5px;
        border-radius: 10px;
        text-shadow: 3px 3px 1px black;
        
        
    }
    
  
</style>


<html>
    <head>
        <!--Import Google Icon Font-->
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

     <!--Google Dosis font-->
     <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@500&display=swap" rel="stylesheet"> 

     <!-- Compiled and minified CSS -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
 
     <!-- Compiled and minified JavaScript -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </head>

    <body>
        <form action="/flight/editpicture" method="post" enctype="multipart/form-data">
    <div class="maincontainer">
    <div class="root">
     <div class="heading">
         EDIT COMPANY LOGO
     </div>
     <hr>
     <div class="row">
         <div class="col s12" style="display: flex;justify-content: center;">
            <input type="hidden" value="<%=flightid%>" name="flightid">
            <input type="hidden" value="<%=logo%>" name="oldlogo">

             <h3><b><%=companyname%></b></h3>

         </div>

     </div>
     <hr>

     <div class="row">
        <div class="col s12" style="display:flex; justify-content:center;">
             <img src="/images/<%=logo%>" width="150px">
        </div>
    </div>  
    <hr>

    
    <div class="row">
        <div class="col s12">
          <div class="file-field input-field">
            <div class="btn">
              <span><b>File</b></span>
              <input type="file" name="logo">
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12" style="display:flex; justify-content:center;">
      <button class="btn waves-effect waves-light" type="submit" name="action">Edit Company Logo
        <i class="material-icons right">send</i>
      </button>
      </div>
      </div>




    </div>
    </div>  
</form>  
 <!--JavaScript at end of body for optimized loading-->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script> 
    </body>
</html>